<nav class="navbar navbar-light bg-light justify-content-between">  
      <% if user_signed_in? %>
        <a class="navbar-brand" href="/users/<%= current_user.id %>">Logged in as: <strong><%= current_user.username %></strong></a>
      <% else %>
        <a class="navbar-brand">Please Login or Signup</a>
      <% end %>
      <%= link_to "Back", :back, :class=>"btn btn-outline-primary" %>
      
</nav>
<br>

<div class="d-flex justify-content-center">
<h2>Forgot your password?</h2>
</div>	
<br>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="d-flex justify-content-center">
  <div style="width: 50%;">
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class =>"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Send password reset instructions", :class=>"btn btn-outline-primary"%>
  </div>
</div>
</div>	
<% end %>


